<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fizkult_top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RobotFizkultActivity" >

    <Button
        android:id="@+id/btn_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="52dp"
        android:layout_marginTop="26dp"
        android:onClick="btnFOnClick"
        android:text="^" />

    <Button
        android:id="@+id/btn_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_r"
        android:layout_alignBottom="@+id/btn_r"
        android:layout_toLeftOf="@+id/btn_b"
        android:onClick="btnLOnClick"
        android:text="&lt;" />

    <Button
        android:id="@+id/btn_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_f"
        android:layout_below="@+id/btn_l"
        android:layout_marginTop="15dp"
        android:onClick="btnBOnClick"
        android:text="_" />

    <Button
        android:id="@+id/btn_b_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_b_u"
        android:layout_alignParentBottom="true"
        android:minWidth="40dp"
        android:onClick="btnBDOnClick"
        android:text="_" />

    <Button
        android:id="@+id/btn_l_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_b_u"
        android:layout_alignParentLeft="true"
        android:minWidth="40dp"
        android:onClick="btnLUOnClick"
        android:text="^" />

    <Button
        android:id="@+id/btn_l_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_b_u"
        android:layout_alignBottom="@+id/btn_b_u"
        android:layout_alignRight="@+id/btn_l_u"
        android:minWidth="40dp"
        android:onClick="btnLDOnClick"
        android:text="_" />

    <Button
        android:id="@+id/btn_b_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_l"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/btn_l_u"
        android:minWidth="40dp"
        android:onClick="btnBUOnClick"
        android:text="^" />

    <Button
        android:id="@+id/btn_f_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_b_u"
        android:layout_below="@+id/btn_f_u"
        android:minWidth="40dp"
        android:onClick="btnFDOnClick"
        android:text="_" />

    <Button
        android:id="@+id/btn_f_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_f_d"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:minWidth="40dp"
        android:onClick="btnFUOnClick"
        android:text="^" />

    <Button
        android:id="@+id/btn_r_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_r_u"
        android:layout_below="@+id/btn_r_u"
        android:minWidth="40dp"
        android:onClick="btnRDOnClick"
        android:text="_" />

    <Button
        android:id="@+id/btn_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btn_b"
        android:onClick="btnROnClick"
        android:text=">" />

    <Button
        android:id="@+id/btn_r_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_l"
        android:layout_alignBottom="@+id/btn_l"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/btn_f_d"
        android:minWidth="40dp"
        android:onClick="btnRUOnClick"
        android:text="^" />

</RelativeLayout>